.container {
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.method-tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: background 0.3s;
}

.tab-item.active {
  background: #4A90E2;
  color: white;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 26rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.form-input {
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

.bind-btn {
  margin-top: 20rpx;
  background-color: #4A90E2;
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #ccc;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 10rpx;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}