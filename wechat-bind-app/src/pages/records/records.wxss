.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

.record-card {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.record-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.record-details {
  font-size: 24rpx;
  color: #666;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}